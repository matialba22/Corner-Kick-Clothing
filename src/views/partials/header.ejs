<header>
  <div class="header-container">

    <div class="mobile-nav">
      <div class="icons burger-menu">
        <i class="fas fa-bars"></i>
      </div>
    </div>
    
    <div class="logo-container">
      <a href="/">
        <img src="/images/logo.png" alt="Page logo" class="logo-img" />
      </a>
    </div>

    <div>
      <form method="get" action="/search" class="search">
        <div class="search-glass">
          <input class="search-bar" type="text" name="q" placeholder="Search..." required minlength="3" />
          <div class="magn-glass">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
        </div>
      </form>
    </div>
    <% if (locals.userLogged) { %>

    <div class="username">
      <a href="/users/profile">
        <p>
          Hi <span><%= locals.userLogged.username != '' ? locals.userLogged.username :"User"%></span>
        </p>
      </a>
    </div>

    <% } else {%>

    <div class="log-register">
      <i class="fa-solid fa-user"></i>
      <a href="/users/register" class="links bold">Sign up</a><span> or </span
      ><a href="/users/login" class="links bold">Sign in</a>
    </div>

    <%} %>

    <div class="icons links">
      <a href="/cart"><i class="fa-solid fa-cart-shopping links"></i></a>
    </div>
  </div>

  <nav>
    <div>
      
      <ul class="nav-ul">
        <li>
          <a href="/shop" class="links">Shop</a>
        </li>
        <li>
          <a href="/shop/footwear" class="links">Footwear</a>
        </li>
        <li>
          <a href="/shop/goalkeeper" class="links">Goalkeeper</a>
        </li>
        <li>
          <a href="/shop/equipment" class="links">Equipment</a>
        </li>
        <li>
          <a href="/shop/apparel" class="links">Apparel</a>
        </li>
      </ul>
    </div>
  </nav>

  <div>
    
    <div class="slick-slider">
      <div>content 1</div>
      <div>content 2</div>
      <div>content 3</div>
    </div>
    
  </div>


</header>
